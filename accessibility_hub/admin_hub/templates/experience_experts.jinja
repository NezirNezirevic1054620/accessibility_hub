{% extends "sidebar_admin.jinja" %}
{% block content %}
<div class="sm:flex sm:items-center sm:justify-between">
    <div>
        <div class="flex items-center gap-x-3">
            <h2 class="text-lg font-medium text-gray-800">Ervaringsdeskundigen</h2>
            <span class="px-3 py-1 text-xs text-blue-600 bg-blue-100 rounded-full">240 vendors</span>
        </div>
        <p class="mt-1 text-sm text-gray-500">Onderaan zie je een lijst met ervaringsdeskundigen.</p>
    </div>
    <div class="flex items-center mt-4 gap-x-3">

    </div>
</div>
<div class="mt-6 md:flex md:items-center md:justify-between">
    <div class="inline-flex overflow-hidden bg-white border divide-x rounded-lg rtl:flex-row-reverse">
        <button class="px-5 py-2 text-xs font-medium text-gray-600 transition-colors duration-200 bg-gray-100 sm:text-sm ">
        View all
        </button>
        <button class="px-5 py-2 text-xs font-medium text-gray-600 transition-colors duration-200 sm:text-sm hover:bg-gray-100">
        Monitored
        </button>
        <button class="px-5 py-2 text-xs font-medium text-gray-600 transition-colors duration-200 sm:text-sm dark:hover:bg-gray-800 dark:text-gray-300 hover:bg-gray-100">
        Unmonitored
        </button>
    </div>
    <div class="relative flex items-center mt-4 md:mt-0">
        <span class="absolute">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-5 h-5 mx-3 text-gray-400 dark:text-gray-600">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"/>
            </svg>
        </span>
        <form method="GET" action="{% url 'search_experience_experts' %}" >
            <input type="text" name="search" placeholder="Zoeken"
                class="block w-full py-1.5 pr-5 text-gray-700 bg-white border border-gray-200 rounded-lg md:w-80 placeholder-gray-400/70 pl-11 rtl:pr-11 rtl:pl-5 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40">
            <button class="add_your_class" hidden="hidden" type="submit"> Search </button>
        </form>
    </div>
</div>
<div class="flex flex-col mt-6">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
            <div class="overflow-hidden border border-gray-200 md:rounded-lg">
                <table class="min-w-full max-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50 ">
                        <tr>
                            <th scope="col"
                                class="py-3.5 px-4 text-sm font-normal text-left rtl:text-right text-gray-500">
                                <button class="flex items-center gap-x-3 focus:outline-none">
                                    <span>Voornaam</span>
                                    <svg class="h-3" viewBox="0 0 10 11" fill="none"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path d="M2.13347 0.0999756H2.98516L5.01902 4.79058H3.86226L3.45549 3.79907H1.63772L1.24366 4.79058H0.0996094L2.13347 0.0999756ZM2.54025 1.46012L1.96822 2.92196H3.11227L2.54025 1.46012Z"
                                            fill="currentColor" stroke="currentColor" stroke-width="0.1"/>
                                        <path d="M0.722656 9.60832L3.09974 6.78633H0.811638V5.87109H4.35819V6.78633L2.01925 9.60832H4.43446V10.5617H0.722656V9.60832Z"
                                            fill="currentColor" stroke="currentColor" stroke-width="0.1"/>
                                        <path d="M8.45558 7.25664V7.40664H8.60558H9.66065C9.72481 7.40664 9.74667 7.42274 9.75141 7.42691C9.75148 7.42808 9.75146 7.42993 9.75116 7.43262C9.75001 7.44265 9.74458 7.46304 9.72525 7.49314C9.72522 7.4932 9.72518 7.49326 9.72514 7.49332L7.86959 10.3529L7.86924 10.3534C7.83227 10.4109 7.79863 10.418 7.78568 10.418C7.77272 10.418 7.73908 10.4109 7.70211 10.3534L7.70177 10.3529L5.84621 7.49332C5.84617 7.49325 5.84612 7.49318 5.84608 7.49311C5.82677 7.46302 5.82135 7.44264 5.8202 7.43262C5.81989 7.42993 5.81987 7.42808 5.81994 7.42691C5.82469 7.42274 5.84655 7.40664 5.91071 7.40664H6.96578H7.11578V7.25664V0.633865C7.11578 0.42434 7.29014 0.249976 7.49967 0.249976H8.07169C8.28121 0.249976 8.45558 0.42434 8.45558 0.633865V7.25664Z"
                                            fill="currentColor" stroke="currentColor" stroke-width="0.3"/>
                                    </svg>
                                </button>
                            </th>
                            <th scope="col"
                                class="px-12 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-500">
                                Status
                            </th>
                            <th scope="col"
                                class="px-4 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-500">
                                Beperking
                            </th>
                            <th scope="col"
                                class="px-4 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-500">
                                Telefoonnummer
                            </th>
                            <th scope="col"
                                class="px-4 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-500">
                                Voogd
                            </th>
                            <th scope="col" class="relative py-3.5 px-4">
                                <span class="sr-only">Edit</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="experienceEpertTables" class="bg-white divide-y divide-gray-200"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="items-center">
</div>

<div class="mt-6 mb-4 sm:flex sm:items-center sm:justify-between ">
    <div class="flex">
        <button onclick="previousPage()" id="previousPage" class="hidden flex border items-center px-4 py-2 mx-1 text-gray-700 transition-colors duration-300 transform bg-white rounded-md dark:bg-gray-800 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-blue-500 dark:hover:text-gray-200">
            Vorige
        </button>
        <button onclick="nextPage()" id="nextPage" class="flex border items-center px-4 py-2 mx-1 text-gray-700 transition-colors duration-300 transform bg-white rounded-md dark:bg-gray-800 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-blue-500 dark:hover:text-gray-200">
            Volgende
        </button>
    </div>
</div>
<script>
        let listLength = Number()
        let minPage = 0
        let maxPage = 9
        let keepTrack = 9

        function nextPage(){
            let check = maxPage+10
            if(listLength-1 !== maxPage){
                if(check >= listLength){
                    minPage = minPage+10
                    maxPage = listLength-1
                    keepTrack = keepTrack+10
                    document.getElementById("nextPage").classList.add("hidden")
                    document.getElementById("previousPage").classList.remove("hidden")
                }
                else{
                    minPage = minPage+10
                    keepTrack = keepTrack+10
                    maxPage = keepTrack
                    if(minPage !== 0){
                        document.getElementById("previousPage").classList.remove("hidden")
                    }
                }
            }
        }

        function previousPage(){
            if(minPage !== 0){
                minPage = minPage-10
                keepTrack = keepTrack-10
                maxPage = keepTrack
                if(minPage === 0){
                    document.getElementById("previousPage").classList.add("hidden")
                }
                if(maxPage >= 10){
                    document.getElementById("nextPage").classList.remove("hidden")
                }
            }
        }

        setInterval(function(){
        fetch(`/admin_hub/get_experts`)
        .then((response) => {
            return response.json()
        })
        .then((data) => {
            listLength = data.length
            document.getElementById("experienceEpertTables").innerHTML = "";
            for(let i=minPage; i<=maxPage; i++){
                let showStatus = ""
                const newTr = document.createElement('tr')
                if(data[i].status === "goedgekeurd"){
                    showStatus = "<div class='inline px-3 py-1 text-sm font-normal rounded-full text-emerald-500 gap-x-2 bg-emerald-100/60'>Goedgekeurd</div>"
                }
                else if(data[i].status === "afgekeurd"){
                    showStatus = "<div class='inline px-3 py-1 text-sm font-normal rounded-full text-red-500 gap-x-2 bg-red-100/60'>Afgekeurd</div>"
                }
                else{
                    showStatus = "<div class='inline px-3 py-1 text-sm font-normal rounded-full text-yellow-500 gap-x-2 bg-yellow-100/60'>In Behandeling</div>"
                }
                
                newTr.innerHTML = 
                `<td class="px-4 py-4 text-sm font-medium whitespace-nowrap">
                    <div>
                        <h2 class="font-medium text-gray-800">${data[i].voornaam}</h2>
                        <p class="text-sm font-normal text-gray-600">${data[i].email}</p>
                    </div>
                </td>
                <td class="px-12 py-4 text-sm font-medium whitespace-nowrap">
                    ${showStatus}
                </td>
                <td class="px-4 py-4 text-sm whitespace-nowrap">
                    <div>
                        <h4 class="text-gray-700">${data[i].type_beperking}</h4>
                        <p class="text-gray-500">${data[i].bijzonderheden}</p>
                    </div>
                </td>
                <td class="px-4 py-4 text-sm whitespace-nowrap">
                    <div>
                        <h4 class="text-gray-700">${data[i].tel_nummer}</h4>
                    </div>
                </td>
                <td class="px-4 py-4 text-sm whitespace-nowrap">
                    <div>
                        <h4 class="text-gray-700">${data[i].naam_voogd_toezichthouder}</h4>
                    </div>
                </td>
                <td class="px-4 py-4 text-sm whitespace-nowrap">
                    <button
                        class="relative z-10 block p-2 text-gray-500 bg-white border hover:bg-gray-100 rounded-lg dark:text-white focus:border-blue-500 focus:ring-opacity-40 dark:focus:ring-opacity-40 focus:ring-blue-300 dark:focus:ring-blue-400 focus:ring dark:bg-gray-800 focus:outline-none"
                        onclick="location.href='/admin_hub/update/${data[i].id}'">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                        </svg>
                    </button>
                </td>`
                document.getElementById("experienceEpertTables").appendChild(newTr)
            }
        })}, 1000)
</script>
{% endblock %}